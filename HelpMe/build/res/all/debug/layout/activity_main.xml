<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/clouds"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">
    <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">


    <LinearLayout
            android:layout_marginRight="@dimen/activity_8dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:background="@drawable/whitebg_curved"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout">

        <ImageView
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_horizontal_margin"
                android:paddingBottom="@dimen/activity_8dp"
                android:layout_width="90dp"
                android:src="@drawable/usercall"
                android:layout_height="wrap_content"/>

        <TextView
                android:paddingLeft="@dimen/activity_8dp"
                android:paddingRight="@dimen/activity_8dp"
                android:layout_width="wrap_content"
                android:text="Add users to be called"
                android:textSize="12sp"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_marginRight="@dimen/activity_8dp"
            android:background="@drawable/whitebg_curved"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout2"
            android:layout_toRightOf="@+id/linearLayout">

        <ImageView
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_horizontal_margin"
                android:paddingBottom="@dimen/activity_8dp"
                android:layout_width="90dp"
                android:src="@drawable/text"
                android:layout_height="wrap_content"/>

        <TextView
                android:paddingLeft="@dimen/activity_8dp"
                android:paddingRight="@dimen/activity_8dp"
                android:layout_width="wrap_content"
                android:text="Add users to be texted"
                android:textSize="12sp"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:background="@drawable/whitebg_curved"
            android:orientation="vertical"
            android:minWidth="130dp"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout3"
            android:layout_toRightOf="@+id/linearLayout2">

        <ImageView
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_horizontal_margin"
                android:paddingBottom="@dimen/activity_8dp"
                android:layout_width="90dp"
                android:src="@drawable/helpsos"
                android:layout_height="wrap_content"/>

        <TextView
                android:paddingLeft="@dimen/activity_8dp"
                android:paddingRight="@dimen/activity_8dp"
                android:layout_width="wrap_content"
                android:text="Start SOS Alarm"
                android:textSize="12sp"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_height="wrap_content">
    <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:background="@drawable/whitebg_curved"
            android:minWidth="120dp"
            android:orientation="vertical"
            android:layout_height="fill_parent"
            android:id="@+id/linearLayout4"
            android:layout_below="@+id/linearLayout">

        <ImageView
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_horizontal_margin"
                android:paddingBottom="@dimen/activity_8dp"
                android:layout_width="90dp"
                android:src="@drawable/settings"
                android:layout_height="wrap_content"/>

        <TextView
                android:paddingLeft="@dimen/activity_8dp"
                android:paddingRight="@dimen/activity_8dp"
                android:layout_width="wrap_content"
                android:text="Settings"
                android:textSize="12sp"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:background="@drawable/whitebg_curved"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/activity_8dp"
            android:layout_marginRight="@dimen/activity_8dp"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout5"
            android:layout_alignTop="@+id/linearLayout4"
            android:layout_alignLeft="@+id/linearLayout2">

        <ImageView
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_horizontal_margin"
                android:paddingBottom="@dimen/activity_8dp"
                android:layout_width="90dp"
                android:src="@drawable/usercall"
                android:layout_height="wrap_content"/>

        <TextView
                android:paddingLeft="@dimen/activity_8dp"
                android:paddingRight="@dimen/activity_8dp"
                android:layout_width="wrap_content"
                android:text="Add users to be called"
                android:textSize="12sp"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:background="@drawable/whitebg_curved"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout6"
            android:layout_alignTop="@+id/linearLayout5"
            android:layout_toRightOf="@+id/linearLayout5">

        <ImageView
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_horizontal_margin"
                android:paddingBottom="@dimen/activity_8dp"
                android:layout_width="90dp"
                android:src="@drawable/usercall"
                android:layout_height="wrap_content"/>

        <TextView
                android:paddingLeft="@dimen/activity_8dp"
                android:paddingRight="@dimen/activity_8dp"
                android:layout_width="wrap_content"
                android:text="Add users to be called"
                android:textSize="12sp"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>
