<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.helpme"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />
    <uses-feature android:name="android.hardware.telephony" />


    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.CALL_PRIVILEGED" />
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS"/>
    <uses-permission android:name="android.permission.SEND_SMS"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:name="com.android.helpme.HelpMeApplication"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name="com.android.helpme.MainActivity"
             />

        <activity android:name=".ExitActivity"/>
        <activity android:name=".AddTextActivity" android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".AddCallActivity" android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".SettingsActivity" android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".SafeHoldActivity"/>
        <activity android:name=".AddCallFirstActivity" android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".AddTextFirstActivity" android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".SOSActivity"/>
        <activity android:name=".SplashActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>
